<h2 class="border-bottom text-dark"><%= t('heading.change_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>
  <div class="col-md-4 py-4">
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password %>
      <small class="form-text text-muted"><%= t('devise.characters_minimum') %> <%= @minimum_password_length %></small>
      <%= f.password_field :password, autofocus: true, class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit t('links.save'), class: 'btn btn-info'%>
    </div>
<% end %>
</div>
