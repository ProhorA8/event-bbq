<h2 class="border-bottom text-dark"><%= t('heading.registration') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>
  <div class="col-md-6 mt-4">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: 'email', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
      <small class="form-text text-muted"><%= t('devise.characters_minimum') %> <%= @minimum_password_length %></small>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
    </div>

    <div class="form-group form-check">
      <%= f.check_box :access_email, class: 'form-check-input' %>
      <%= f.label :access_email, t('inscription.i_agree'), class: 'form-check-label' %>
      <%= link_to t('links.privacy_policy'), pages_politika_path, target: "_blank", rel: "noreferrer" %>
    </div>

    <div class="actions">
      <%= f.submit t('links.register'), class: 'btn btn-primary' %>
    </div>

    <div class="py-4">
      <%= render 'devise/shared/links' %>
    </div>
  </div>
<% end %>
