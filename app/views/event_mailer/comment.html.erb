<h1><%= t('.title') %></h1>
<p><%= @comment.body %></p>
<p><%= t('.author') %>: <strong><%= @comment.user_name %></strong></p>

<hr/>

<%= t('.event') %>
<h3><%= link_to @event.title, @event %></h3>

<%= Time.now > @event.datetime ? t('.consisted') : t('.will_take_place') %>
<h4><%= l(@event.datetime, format: :short) %></h4>

<%= t('.owner') %>
<h4><%= @event.user.name %></h4>
