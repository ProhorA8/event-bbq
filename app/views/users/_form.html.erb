<%= form_for @user, html: {multipart: true} do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
    <%= f.file_field :avatar %>
  </div>

<!--  возможность поменять своё решение в любой момент-->
  <div class="form-group form-check">
    <%= f.check_box :access_email, class: 'form-check-input' %>
    <%= f.label :access_email, t('inscription.i_agree'), class: 'form-check-label' %>
    <%= link_to t('links.privacy_policy'), pages_politika_path, target: "_blank", rel: "noreferrer" %>
  </div>

  <div class="actions">
    <%= f.submit t('links.save'), class: 'btn btn-primary' %>
  </div>
<% end %>
