<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background',
                      style: "background-image: url(#{asset_pack_path('media/images/event.jpg')})" %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= @event.datetime %></h3>
            <h3><small><%= link_to @event.address,
                                   "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
            <div class="buffer-top">
              <%= link_to t('links.change'), edit_event_path(@event),
                          class: 'btn btn-primary buffer-both' %>

              <%= link_to t('links.delete_event'), event_path(@event),
                          data: {confirm: t('questions.are_you_sure')},
                          method: :delete, class: 'btn btn-danger ml-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
